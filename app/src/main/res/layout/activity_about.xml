<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fanhui"
            android:padding="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_40"
            android:text="关于我们"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:src="@mipmap/zhen_about"
        android:scaleType="centerInside"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_jy_25"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:text="P99 1.0 版本"
        android:textColor="#999999"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:text="版本说明"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_jy_15"
            android:layout_height="@dimen/dp_jy_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_back"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/dp_jy_10" />

    </RelativeLayout>

    <TextView
        style="@style/horizontal_line_style"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:text="去评分"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_jy_15"
            android:layout_height="@dimen/dp_jy_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_back"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/dp_jy_10"  />

    </RelativeLayout>

</LinearLayout>
