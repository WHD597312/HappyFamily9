<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray">
    
    <RelativeLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fanhui3x"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="添加设备"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_wifi"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/bg_shape"
            android:text="WLAN配对"
            android:textColor="@color/green2"
            android:layout_marginRight="@dimen/dp_5"
            />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:text="二维码"
            android:textColor="@color/color_gray2"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wifi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/tv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="■"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@+id/tv_wifi"
            android:layout_toRightOf="@+id/tv_wifi"
            android:text="填写要连接的无线网络"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_15" />

        <org.angmarch.views.NiceSpinner
            android:id="@+id/nice_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/tv_wifi"
            android:layout_marginTop="@dimen/dp_15" />
        <EditText
            android:id="@+id/et_wifi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/nice_spinner"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_wifi"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="隐藏密码"
            android:textColor="@color/green2" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scan_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_45"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="■"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_11"
            android:layout_marginLeft="@dimen/dp_50"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="请将二维码靠近相机"
            android:layout_toRightOf="@+id/tv_scan"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_add_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_add_device"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_50"
        />
</RelativeLayout>
