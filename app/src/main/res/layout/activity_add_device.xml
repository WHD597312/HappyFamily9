<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray">
    
    <RelativeLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fanhui"
            android:padding="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_40"
            android:text="添加设备"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/image_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_12"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/scan" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/head_title"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/layout_add_2g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_2g0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/img_2g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/two_2g1"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp_jy_3"
                android:layout_toRightOf="@+id/tv_2g0"
                />
            <TextView
                android:id="@+id/tv_2g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2G添加  "
                android:textColor="@color/green2"
                android:textSize="@dimen/sp_17"
                android:gravity="center"
                android:layout_toRightOf="@+id/img_2g"
                />
            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_jy_3"
                android:background="@color/green2"
                android:layout_below="@+id/tv_2g"
                android:layout_alignLeft="@+id/tv_2g0"
                android:layout_alignRight="@+id/tv_2g"
                android:layout_marginTop="@dimen/dp_jy_5"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_add_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_wifi0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/img_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wifi"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp_jy_3"
                android:layout_toRightOf="@+id/tv_wifi0"
                android:layout_marginTop="@dimen/dp_jy_3"

                />
            <TextView
                android:id="@+id/tv_wifi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiFi添加  "
                android:textSize="@dimen/sp_17"
                android:gravity="center"
                android:layout_toRightOf="@+id/img_wifi"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_jy_3"
                android:background="@color/green2"
                android:layout_below="@+id/tv_wifi2"
                android:layout_alignLeft="@+id/tv_wifi0"
                android:layout_alignRight="@+id/tv_wifi2"
                android:layout_marginTop="@dimen/dp_jy_5"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_jy_3"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/layout_add"
        android:layout_alignBottom="@+id/layout_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_jy_3"
        android:background="@color/color_gray2"
        android:layout_marginBottom="@dimen/dp_jy_3"
        />


    <RelativeLayout
        android:id="@+id/layout_2g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_add"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginRight="@dimen/dp_jy_12"
        android:layout_marginTop="@dimen/dp_jy_10"
        >
        <TextView
            android:id="@+id/tv_2g2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_30"
            android:text="■"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_30"
            android:layout_alignTop="@+id/tv_2g2"
            android:layout_toRightOf="@+id/tv_2g2"
            android:text="填写扫描二维码获取到的序列号"
            android:layout_marginLeft="@dimen/dp_jy_5"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/tv_2g2"
            android:layout_marginTop="@dimen/dp_jy_10"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_jy_20"
            android:hint="请填写获取的序列号"
            android:inputType="text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wifi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_add"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginRight="@dimen/dp_jy_12"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_30"
            android:text="■"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_30"
            android:layout_alignTop="@+id/tv_wifi"
            android:layout_toRightOf="@+id/tv_wifi"
            android:text="请填写要连接的网络"
            android:layout_marginLeft="@dimen/dp_jy_5"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/nice_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/tv_wifi"
            android:layout_marginTop="@dimen/dp_jy_10"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_jy_20"
            android:hint="WiFi名称"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/et_wifi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@+id/nice_spinner"
            android:layout_marginTop="@dimen/dp_jy_10"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_jy_20"
            android:inputType="textVisiblePassword"
            android:hint="WiFi密码"
            />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/image_gif"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_160"
            android:background="@color/white"
            android:layout_below="@+id/et_wifi"
            android:visibility="gone"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/bt_add_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_jy_14"
        android:layout_marginRight="@dimen/dp_jy_14"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_add_device"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_jy_50"
        />
</RelativeLayout>
