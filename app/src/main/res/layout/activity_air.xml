                <TextView
                    android:id="@+id/tv_shiwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33℃"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前室温"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>



            <LinearLayout
