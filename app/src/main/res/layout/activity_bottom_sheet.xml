<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="@drawable/bg_shaped"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:id="@+id/bottomSheetLayout"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    >


        <LinearLayout
            android:id="@+id/li_csj_db"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_b_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/csj_qd3x"
                android:paddingTop="@dimen/dp_15"
                android:layout_weight="1"
                />

            <TextView
                android:paddingTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:text="设定风速"
                android:textColor="@color/green2"/>
            <ImageView
                android:id="@+id/iv_b_qx"
                android:paddingTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/csj_qx3x"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_24"
            android:layout_below="@+id/li_csj_db"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_b_1"
                    android:paddingLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/csj_dj3x"
                    android:paddingTop="@dimen/dp_15"

                    />

                <TextView
                    android:paddingTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="一级"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/color_gray2"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_b_2"
                    android:paddingLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/csj_djnull3x"
                    android:paddingTop="@dimen/dp_15"

                    />

                <TextView
                    android:paddingTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="二级"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/color_gray2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_b_3"
                    android:paddingLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/csj_djnull3x"
                    android:paddingTop="@dimen/dp_15"

                    />

                <TextView
                    android:paddingTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="三级"
                    android:textColor="@color/color_gray2"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
