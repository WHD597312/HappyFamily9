<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_490"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_centerInParent="true"
        android:background="@mipmap/beijing">

        <ImageView
            android:id="@+id/iv_fg_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/dtubiao" />
        <TextView
            android:id="@+id/tv_fg_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_fg_tb"
            android:textSize="25sp"
            />


        <EditText
            android:id="@+id/et_fg_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_fg_phone"
            android:layout_alignTop="@+id/image_fg_phone"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@null"
            android:layout_marginBottom="@dimen/dp_5"
            android:hint="输入手机号码"
            android:inputType="phone"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/image_fg_phone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/tv_fg_zh"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_36"
            android:scaleType="centerInside"
            android:src="@mipmap/wo" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et_fg_phone"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginRight="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/color_gray2" />

        <EditText
            android:id="@+id/et_fg_code"
            android:layout_width="@dimen/dp_190"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_fg_phone"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/image_fg_user"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/view1"
            android:layout_alignLeft="@+id/image_fg_phone"
            android:layout_marginTop="@dimen/dp_28"
            android:scaleType="centerInside"
            android:src="@mipmap/yaoshi" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignRight="@id/et_fg_code"
            android:layout_below="@+id/et_fg_code"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_gray2" />

        <Button
            android:id="@+id/btn_fg_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_29"
            android:layout_alignBottom="@+id/et_fg_code"
            android:background="@mipmap/anniu3"
            android:text="获取验证码"
            android:textColor="@color/color_black"

            />


        <EditText
            android:id="@+id/et_fg_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_toRightOf="@+id/image_fg_pwd"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@null"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/image_fg_pwd"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_28"
            android:scaleType="centerInside"
            android:src="@mipmap/suo" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/et_fg_password"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginRight="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_gray2" />

        <Button
            android:id="@+id/btn_fg_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/anniu1"
            android:text="修改完成"
            android:textColor="@color/green2" />
    </RelativeLayout>
</RelativeLayout>