<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_68"
        android:padding="@dimen/dp_jy_12"
        android:orientation="horizontal">
        
        <EditText
            android:id="@+id/et_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入好友昵称/手机号"
            android:gravity="center_vertical"
            android:background="@drawable/bg_shape_fill_gray5"
            android:paddingLeft="@dimen/dp_jy_15"
            android:textSize="@dimen/sp_12"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_queding"
            android:layout_width="@dimen/dp_jy_100"
            android:layout_height="match_parent"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:background="@drawable/bg_shape_fill_green5"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>