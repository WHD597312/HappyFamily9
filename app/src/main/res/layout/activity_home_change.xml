<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/li_change"
        >

        <TextView
            android:id="@+id/tv_t1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_50"
            android:gravity="center"
            android:text="选择房间"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/sp_16"

            />
        <ImageView
            android:id="@+id/ib_change"
            android:layout_toRightOf="@+id/tv_t1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_marginLeft="@dimen/dp_jy_2"
            android:rotation="180"
            android:background="@null"
            android:src="@mipmap/jt_xl"
            />

    </RelativeLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/change_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginRight="@dimen/dp_jy_12"
        android:dividerHeight="@dimen/dp_jy_12"
        android:background="@null"
        android:divider="@null"
        >

    </ListView>

</LinearLayout>
