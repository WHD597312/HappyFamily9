<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_160"
    android:background="@drawable/bg_shape"
    android:id="@+id/rl_homed_rename">
    <TextView
        android:id="@+id/tv_homed_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改家庭名字"
        android:textColor="@color/color_gray4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"

        />
    <EditText
        android:id="@+id/et_homed_name"
        android:layout_below="@+id/tv_homed_rename"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_below="@+id/et_homed_name"
        android:layout_marginTop="@dimen/dp_21"
        android:background="@color/color_gray"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="@dimen/dp_21"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="|"
            android:textColor="@color/color_gray2"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingLeft="@dimen/dp_21"
            android:text="确定"
            android:layout_weight="1"
            />

    </LinearLayout>
</RelativeLayout>
