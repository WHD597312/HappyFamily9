<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_jy_163"
    android:layout_height="@dimen/dp_jy_93"
    android:background="@drawable/tbg_shape"
    >

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_jy_14"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:text="卧室"
        android:textColor="#3c3c3c"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_device_name"
        android:layout_marginLeft="@dimen/dp_jy_15"
        android:layout_marginTop="@dimen/dp_jy_5"
        android:textSize="@dimen/sp_14"
        android:text="智能终端"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_device_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_device_type"
        android:layout_marginLeft="@dimen/dp_jy_14"
        android:layout_marginTop="@dimen/dp_jy_18"
        android:text="电源开"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/green2" />
    <View
        android:id="@+id/view_homeitem"
        android:layout_width="@dimen/dp_jy_8"
        android:layout_height="@dimen/dp_jy_3"
        android:background="#01c39c"
        android:layout_toRightOf="@+id/tv_device_switch"
        android:layout_alignBottom="@+id/tv_device_switch"
        android:layout_marginBottom="@dimen/dp_jy_3"
        android:layout_marginLeft="@dimen/dp_jy_9"

        />

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_jy_4"
        android:layout_marginLeft="@dimen/dp_jy_81"
        android:src="@mipmap/sb_dnq" />

</RelativeLayout>
