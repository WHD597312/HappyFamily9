<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj1"
    android:orientation="vertical">

    <com.xr.happyFamily.jia.Myscrollview

    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_alignParentTop="true"
    app:layout_heightPercent="75%"
    app:layout_widthPercent="100%"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <RelativeLayout
            android:id="@+id/rl_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/image_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weishengjian1"
                android:background="@null"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                />
            <TextView
                android:id="@+id/tv_my_hourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cofen的家"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                />
            <TextView
                android:id="@+id/tv_wd_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_63"
                android:text="室温"
                android:textColor="@color/color_white"

                />

            <TextView
                android:id="@+id/tv_23_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_wd_my"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginTop="@dimen/dp_43"
                android:text="23℃"
                android:textColor="@color/color_white"
                android:textSize="35sp"

                />
            <RelativeLayout
                android:id="@+id/rl_home_xnty"
                android:layout_width="@dimen/dp_226"
                android:layout_height="@dimen/dp_110"
                android:layout_marginTop="@dimen/dp_91"
                android:background="@mipmap/bj_m3x"
                android:layout_marginLeft="@dimen/dp_12"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="虚拟体验"
                    android:id="@+id/tv_xnty_my"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIRTUAL REALITY"
                    android:textSize="9sp"
                    android:layout_below="@+id/tv_xnty_my"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xnty"
                    android:layout_marginLeft="@dimen/dp_93"
                    android:layout_marginTop="@dimen/dp_13"
                    />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_eq_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_wd_my"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_131"
                android:text="常用设备"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMON EQUPMENT"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="9sp"
                android:layout_below="@+id/tv_eq_my"
                android:id="@+id/tv_eqe_my"

                />

            <com.xr.happyFamily.jia.MyGridview
                android:layout_below="@id/tv_eqe_my"
                android:layout_marginTop="@dimen/dp_12"
                android:id="@+id/gv_home_my"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_191"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp"
                android:columnWidth="@dimen/dp_169"
                android:gravity="center"
                android:horizontalSpacing="@dimen/dp_12"
                android:numColumns="2"
                android:verticalSpacing="@dimen/dp_12">

            </com.xr.happyFamily.jia.MyGridview>

            <TextView
                android:id="@+id/tv_eq_my1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gv_home_my"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="分享设备"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHARE EQUPMENT"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="9sp"
                android:layout_below="@+id/tv_eq_my1"
                android:id="@+id/tv_eqe_my1"

                />
            <com.xr.happyFamily.jia.MyGridview
                android:layout_below="@id/tv_eqe_my1"
                android:layout_marginTop="@dimen/dp_12"
                android:id="@+id/gv_home_my1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_191"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp"
                android:columnWidth="@dimen/dp_169"
                android:gravity="center"
                android:horizontalSpacing="@dimen/dp_12"
                android:numColumns="2"
                android:verticalSpacing="@dimen/dp_12">

            </com.xr.happyFamily.jia.MyGridview>

        </RelativeLayout>

    </RelativeLayout>

</com.xr.happyFamily.jia.Myscrollview>



    <Button
       android:layout_above="@+id/li_page1"
        android:layout_marginBottom="@dimen/dp_20"
        android:id="@+id/bt_mypage_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/button"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:text="+ 添加设备"
        android:textColor="@color/white"
        />


   <LinearLayout
       android:id="@+id/li_page1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"

       >
    <include
        layout="@layout/activity_home_bottom"
         />
  </LinearLayout>
</android.support.percent.PercentRelativeLayout>
