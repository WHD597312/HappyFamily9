<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp" >
        <ImageView
            android:id="@+id/iv_rename_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/fanhui"/>

        <TextView
            android:id="@+id/tv_rename_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="家庭编辑"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray2"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:text="家庭"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_jy_7"
        android:id="@+id/rl_rename_it1"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_jy_50">
        <TextView
            android:id="@+id/tv_rename_choosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家庭名称"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_rename_choosep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx的家"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_35"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_rename_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_12"
            android:src="@mipmap/hourse_xz"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_phone"
        android:layout_marginTop="@dimen/dp_jy_1"
        android:background="@color/color_gray2" />
    <RelativeLayout
        android:id="@+id/rl_rename_it2"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_jy_50">
        <TextView
            android:id="@+id/tv_rename_choosen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家庭位置"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_rename_choosep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州西湖"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_35"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_rename_c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_12"
            android:src="@mipmap/hourse_xz"
            />
    </RelativeLayout>

     <com.xr.happyFamily.jia.view_custom.LinearGradientView
         android:layout_width="match_parent"
         android:layout_height="5dp" />


</LinearLayout>
