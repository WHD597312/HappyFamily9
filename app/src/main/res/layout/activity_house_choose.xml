<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.xr.happyFamily.jia.titleview.TitleView
        android:id="@+id/title_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_hourse_choose"
        android:layout_below="@+id/title_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="家庭切换"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:textColor="@color/color_gray4"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_jy_12"
        android:layout_below="@+id/tv_hourse_choose"
        android:id="@+id/lv_hourse_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_hourse_bj"
        android:layout_below="@+id/lv_hourse_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑管理"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:textColor="@color/color_gray4"
        />
    <TextView
        android:id="@+id/tv_hourse_jtgl"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:layout_below="@+id/tv_hourse_bj"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:text="家庭管理"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_jy_12"
        android:textColor="@color/black"
        android:background="@drawable/bg_shape"
        />
    <com.xr.happyFamily.jia.view_custom.LinearGradientView
        android:layout_below="@+id/tv_hourse_jtgl"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</RelativeLayout>
