<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/img"
    >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@mipmap/beijing3x"
        />
    <com.xr.happyFamily.liwenchao.activity.MyGifView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_80"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_91"
            android:layout_marginRight="@dimen/dp_80"
            android:digits="1234567890"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:inputType="phone|number"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="@dimen/sp_18" />


        <ImageView
            android:id="@+id/image_user"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_61"
            android:scaleType="centerInside"
            android:src="@mipmap/wo3x" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignLeft="@id/et_name"
            android:layout_alignRight="@id/image_user"
            android:layout_below="@+id/et_name"
            android:background="@color/white" />

        <EditText
            android:id="@+id/et_pswd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/view1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_91"
            android:layout_marginRight="@dimen/dp_80"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/image_seepwd"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/et_name"
            android:layout_alignTop="@+id/image_pswd" />

        <ImageView
            android:id="@+id/image_pswd"
            android:layout_width="@dimen/dp_30"
            android:layout_height="29dp"
            android:layout_below="@id/image_user"
            android:layout_marginLeft="@dimen/dp_61"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@mipmap/suo3x" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignLeft="@id/et_name"
            android:layout_alignRight="@id/image_user"
            android:layout_below="@+id/et_pswd" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignLeft="@+id/image_user"
            android:layout_alignTop="@+id/tv_forget_pswd"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_10"
            android:text="注册" />

        <TextView
            android:id="@+id/tv_forget_pswd"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view2"
            android:layout_marginRight="@dimen/dp_61"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="忘记密码" />

        <ImageView
            android:id="@+id/image_qq"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_below="@+id/tv_register"
            android:layout_marginLeft="@dimen/dp_201"

            android:src="@mipmap/qq3x" />

        <ImageView
            android:id="@+id/image_wx"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@+id/tv_register"
            android:layout_marginLeft="@dimen/dp_117"
            android:scaleType="centerInside"
            android:src="@mipmap/weixin3x" />


    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:background="@mipmap/anniu13x"
        android:text="登录"
        android:textColor="@color/green"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:elevation="@dimen/dp_5"

        />




</RelativeLayout>