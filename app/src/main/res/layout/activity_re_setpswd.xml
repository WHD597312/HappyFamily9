<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zhen.ReSetpswdActivity"
    android:background="#faf9f9"
    >
    <RelativeLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fanhui"
            android:padding="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_40"
            android:text="更改登录密码"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_jy_10"
        android:id="@+id/layout"
        android:layout_below="@+id/head_title"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_oldpswd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:hint="旧密码"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword"
            />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_below="@+id/et_oldpswd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/et_newpswd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:hint="新密码"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:layout_below="@+id/view"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/et_ensurepswd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="确认密码"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword"
            />
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_below="@+id/layout"
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码至少6个字符"
        android:paddingLeft="@dimen/dp_jy_10"
        android:layout_marginTop="@dimen/dp_jy_10"
        />
    <Button
        android:id="@+id/btn_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_marginLeft="@dimen/dp_jy_10"
        android:layout_marginRight="@dimen/dp_jy_10"
        android:background="@mipmap/button"
        android:text="提交"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white" />
</RelativeLayout>