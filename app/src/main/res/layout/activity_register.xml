<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    >
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@mipmap/beijing" />
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/dp_jy_130"
        android:layout_height="@dimen/dp_jy_130"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_jy_60"
        android:scaleType="centerInside"
        android:src="@mipmap/tubiao"
        />
    <ImageView
        android:id="@+id/iv_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yuan2"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="@dimen/dp_jy_110"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/daohang"
        android:layout_toLeftOf="@id/iv_yuan"

        />

    <ImageView
        android:id="@+id/iv_yuanwc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginRight="@dimen/dp_jy_103"
        android:layout_marginTop="0dp"
        android:src="@mipmap/yuan22" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="11sp"
        android:layout_marginTop="@dimen/dp_jy_8"
        android:layout_below="@id/iv_yuan"
        android:textColor="@color/green2"
        android:layout_marginLeft="@dimen/dp_jy_109"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="11sp"
        android:layout_marginTop="@dimen/dp_jy_8"
        android:layout_below="@id/iv_yuanwc"
        android:textColor="@color/color_gray2"
        android:layout_alignRight="@+id/iv_yuanwc"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_jy_250"
        android:ems="10"
        android:hint="输入手机号码"
        android:layout_alignTop="@+id/image_phone"
        android:layout_marginLeft="@dimen/dp_jy_80"
        android:layout_marginRight="@dimen/dp_jy_60"
        android:background="@null"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_18"
        android:inputType="phone"
        />
    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="@dimen/dp_jy_30"
        android:layout_height="@dimen/dp_jy_30"
        android:layout_marginTop="@dimen/dp_jy_246"
        android:layout_marginLeft="@dimen/dp_jy_48"
        android:scaleType="centerInside"
        android:src="@mipmap/wo" />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_phone"
        android:background="@color/color_gray2"
        android:layout_marginLeft="@dimen/dp_jy_49"
        android:layout_marginRight="@dimen/dp_jy_49"
        android:layout_marginTop="@dimen/dp_jy_1"
        />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="@dimen/dp_jy_190"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_phone"
        android:layout_below="@+id/view1"
        android:layout_marginTop="@dimen/dp_jy_28"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入验证码"
        android:inputType="number"
        android:textSize="@dimen/sp_18" />
    <ImageView
        android:id="@+id/image_user"
        android:layout_width="@dimen/dp_jy_30"
        android:layout_height="@dimen/dp_jy_30"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="@dimen/dp_jy_48"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:scaleType="centerInside"
        android:src="@mipmap/yaoshi" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_1"
        android:layout_below="@+id/et_code"
        android:background="@color/color_gray2"
        android:layout_marginLeft="@dimen/dp_jy_49"
        android:layout_alignRight="@id/et_code"
        android:layout_marginTop="@dimen/dp_jy_1"
        />

    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_alignRight="@+id/et_phone"
        android:textColor="@color/holo_gray_light"
        android:layout_centerVertical="true"
        android:layout_alignTop="@id/et_code"
        android:layout_alignBottom="@id/view2"
        android:background="@mipmap/anniu3"
        android:text="获取验证码"

        />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/et_phone"
        android:layout_alignRight="@+id/et_phone"
        android:layout_marginBottom="@dimen/dp_jy_75"
        android:text="下一步"
        android:textColor="@color/green2"
        android:background="@mipmap/anniu1"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginTop="@dimen/dp_jy_28"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_jy_80"
        android:textSize="@dimen/sp_18"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="请输入密码"
        />
    <ImageView
        android:id="@+id/image_pwd"
        android:layout_width="@dimen/dp_jy_30"
        android:layout_height="@dimen/dp_jy_30"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="@dimen/dp_jy_48"
        android:layout_marginTop="@dimen/dp_jy_25"
        android:scaleType="centerInside"
        android:src="@mipmap/suo" />
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_1"
        android:layout_below="@+id/et_password"
        android:background="@color/color_gray2"
        android:layout_marginLeft="@dimen/dp_jy_49"
        android:layout_marginRight="@dimen/dp_jy_49"
        android:layout_marginTop="@dimen/dp_jy_1"
        />
</RelativeLayout>
</RelativeLayout>