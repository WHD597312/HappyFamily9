<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jia.activity.ShareDeviceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_60">
            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/fanhui"
                android:padding="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="分享设备"
                android:textSize="@dimen/sp_20"
                />

            <ImageView
                android:id="@+id/image_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/image_more"
                android:padding="@dimen/dp_jy_12"
                android:layout_marginRight="@dimen/dp_jy_20"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称: "
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_jy_15"
            android:layout_marginLeft="@dimen/dp_jy_15"
            android:layout_below="@+id/relative"
            />
        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_device_name"
            android:textSize="@dimen/sp_18"
            android:layout_toRightOf="@+id/tv_device_name"
            android:text="名称" />
        <TextView
            android:id="@+id/tv_device_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="固件版本:"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_device_name"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_jy_10"
            android:layout_marginLeft="@dimen/dp_jy_15"
            />


        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_device_version"
            android:layout_below="@+id/tv_device_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_device_version"
            android:text="1.0"
            android:textSize="@dimen/sp_18" />

        <Button
            android:id="@+id/btn_update_version"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_25"
            android:layout_alignTop="@+id/tv_version"
            android:layout_below="@+id/tv_device_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_version"
            android:layout_marginLeft="@dimen/dp_jy_10"
            android:background="@drawable/shape_device_update_version"
            android:text="升级"
            android:textSize="@dimen/sp_16"
            />

        <ImageView
            android:id="@+id/img_qrCode"
            android:layout_below="@+id/btn_update_version"
            android:layout_marginTop="@dimen/dp_jy_10"
            android:layout_width="@dimen/dp_jy_250"
            android:layout_height="@dimen/dp_jy_250"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>