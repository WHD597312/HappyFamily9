<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
    layout="@layout/title_shop" />
    <com.xr.happyFamily.bao.view.LinearGradientView
        android:layout_height="3dp"
        android:layout_width="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textColor="@color/black"
            android:textSize="12sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
    <include
        layout="@layout/cutline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:textColor="@color/black"
            android:textSize="12sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
    <include
        layout="@layout/cutline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地址："
            android:textColor="@color/black"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/gengduo_dizhi3x"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
    <include
        layout="@layout/cutline"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="详细地址"
        android:gravity="top|left"
        android:textSize="12sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        />
    <com.xr.happyFamily.bao.view.LinearGradientView
        android:layout_height="3dp"
        android:layout_width="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
     android:padding="12dp">
        <ImageView
            android:id="@+id/img_choose"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/xuanzhong3x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

    </LinearLayout>
    <com.xr.happyFamily.bao.view.LinearGradientView
        android:layout_height="3dp"
        android:layout_width="match_parent"/>
</LinearLayout>