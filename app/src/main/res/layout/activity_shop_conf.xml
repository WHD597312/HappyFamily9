<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
    layout="@layout/title_shop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">
        <TextView
            android:id="@+id/tv_conf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shop_context"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"
            android:text="吴广"/>

        <TextView
            android:id="@+id/tv_conf_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shop_title"
            android:layout_toRightOf="@+id/tv_conf_name"
            android:textSize="12sp"
            android:layout_marginLeft="35dp"
            android:text="176****9527"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_conf_tel"
            android:layout_marginLeft="35dp"
            android:text="默认"
            android:background="@drawable/bg_shape_moren"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/green3"/>

        <TextView
            android:id="@+id/tv_conf_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_conf_name"
            android:layout_alignLeft="@id/tv_conf_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:text="浙江  宁波  慈溪  详细地址......"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@+id/tv_conf_name"
            android:layout_marginTop="12dp"
            android:src="@mipmap/dingwei3x"/>


        <ImageView
            android:id="@+id/image_more_address"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/gengduo_dizhi3x"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/zhifubao3x" />
        <TextView
            android:id="@+id/tv_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10sp"
            android:drawableRight="@mipmap/xuanzhong_shop3x"/>
    </LinearLayout>

    <include
        layout="@layout/cutline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/weixin_shop3x" />
        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10sp"
            android:drawableRight="@mipmap/weixuanzhong3x"/>
    </LinearLayout>

    <include
        layout="@layout/cutline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/wangyin3x" />
        <TextView
            android:id="@+id/tv_yinlian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="银联支付"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10sp"
            android:drawableRight="@mipmap/weixuanzhong3x"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="10dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:paddingLeft="13dp"
                android:paddingRight="14dp">




                <ImageView
                    android:id="@+id/img_shop_pic"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:background="#000000"
                    android:layout_toRightOf="@+id/radio_shop" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_alignTop="@+id/img_shop_pic"
                    android:layout_toRightOf="@+id/img_shop_pic"
                    android:text="电暖气  银色"
                    android:textColor="@color/shop_context"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_shop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_below="@+id/tv_shop_name"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/img_shop_pic"
                    android:text="对流式加热，通电即热，无感静音，双重安装保护33333333333"
                    android:textColor="#A5A5A5"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_shop_pic"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/tv_shop_type">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/shop_price"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="2500"
                        android:textColor="@color/shop_price"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/img_shop_pic"
                    android:text="X1"/>




            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送方式"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快递配送"
            android:textColor="#A5A5A5"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginLeft="10sp" />

    </LinearLayout>
    <include
        layout="@layout/cutline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="明细（纸质）"
            android:textColor="#A5A5A5"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginLeft="10sp" />

    </LinearLayout>
    <include
        layout="@layout/cutline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品金额"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="￥2500"
            android:textColor="@color/shop_price"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginLeft="10sp" />

    </LinearLayout>
    <include
        layout="@layout/cutline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_marginLeft="10sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+￥0"
            android:textColor="@color/shop_price"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginLeft="10sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计："
                android:textSize="14sp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥2500"
                android:textColor="@color/shop_price"
                android:textSize="14sp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_shopcart_submit"
                android:layout_width="108.5dp"
                android:layout_height="48.5dp"
                android:background="@color/shop_price"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="#ffffff"

                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>