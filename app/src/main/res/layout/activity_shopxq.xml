<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_pop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:background="@color/white">
        <!--商城右边有字时的标题-->
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_jy_40"
            android:layout_height="@dimen/dp_jy_40"
            android:padding="@dimen/dp_jy_10"
            android:layout_centerVertical="true"
            android:src="@mipmap/fanhui"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_flower"
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            android:layout_height="45dp">
        </android.support.design.widget.TabLayout>

        <ImageView
            android:id="@+id/img_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_fenxiang"
            android:padding="@dimen/dp_jy_10"
             />

    </RelativeLayout>

    <com.xr.happyFamily.bao.view.LinearGradientView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_jy_3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_flower"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_49"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shopcart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e6c43b"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_16"/>
        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#cf6125"
            android:text="立即购买"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>
</LinearLayout>