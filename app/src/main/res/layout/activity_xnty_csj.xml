<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.xr.happyFamily.jia.xnty.CsjActivity"

    >

    <ImageView
        android:id="@+id/iv_csj_bj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/kuai3x"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:background="@color/green2" />
    <View
        android:id="@+id/view_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:background="@null"

        />
    <LinearLayout
        android:id="@+id/li_csj"
        android:layout_below="@+id/view_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageButton
        android:id="@+id/ib_csj_fh"
        android:layout_width="0dp"
        android:paddingRight="@dimen/dp_29"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/fanhui_xnty"
        android:background="@null"

        />

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_3"
            android:text="除湿机虚拟体验"
            android:textColor="@color/white"
            android:textSize="19sp" />
        <View
            android:id="@+id/view_csj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:background="@null"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_csj_sdsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="设定湿度"
        android:textSize="15sp"
        android:layout_below="@+id/li_csj"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:id="@+id/tv_csj_dqsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="当前湿度"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:layout_below="@+id/li_csj"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:id="@+id/tv_csj_29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="29"
        android:textSize="33sp"
        android:layout_below="@+id/tv_csj_sdsd"
        android:layout_alignLeft="@+id/tv_csj_sdsd"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_csj_36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:text="36"
        android:layout_below="@+id/tv_csj_sdsd"
        android:layout_alignLeft="@+id/tv_csj_dqsd"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/iv_csj_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp_80"
            android:src="@mipmap/csj_kgg"
            />

    <ImageView
        android:id="@+id/iv_csj_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/dp_80"
        android:src="@mipmap/csj_ds"
        />

        <ImageView

            android:id="@+id/iv_csj_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp_80"
            android:src="@mipmap/csj_fsg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
     <TextView
        android:layout_weight="1"
        android:id="@+id/tv_csj_kg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_38"
        android:textSize="14sp"
        android:text="开机状态"
        />
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_csj_ds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_38"
        android:textSize="14sp"
        android:text="13:00——14:00"
        />
        <TextView
        android:id="@+id/tv_csj_f1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/dp_38"
        android:textSize="14sp"
        android:text="风速1级"
        />

    </LinearLayout>

</RelativeLayout>


