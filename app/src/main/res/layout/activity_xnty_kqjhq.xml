<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/rl_kqjh"
    android:layout_width="match_parent"
    android:background="@color/color_green5"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kqjih_fh"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_kqjh_ty"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="空气净化器虚拟体验"
        android:textColor="@color/white"
        android:textSize="19sp"
        />
    <ImageView
        android:layout_below="@+id/tv_kqjh_ty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@mipmap/kqjh_jq"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/li_kqjh"
        android:layout_below="@+id/rl_kqjh"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_kqjh_kg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/kqjh_kg"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_kqjh_fs"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/kqjh_fs"
            android:layout_weight="1"
            />
        <ImageView
        android:id="@+id/iv_kqjh_sm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
          android:layout_gravity="center"
        android:src="@mipmap/kqjh_sm"
        android:layout_weight="1"
        /> <ImageView
        android:id="@+id/iv_kqjh_ds"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@mipmap/kqjh_ds"
        android:layout_weight="1"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_green5"
            android:text="开关"
            />
    </LinearLayout>
</RelativeLayout>
