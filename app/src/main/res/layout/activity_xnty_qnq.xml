<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.xr.happyFamily.jia.xnty.SmartSocket">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_qnq_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:background="@color/color_yellow1">

            <LinearLayout
                android:id="@+id/li_qnq_title"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_25"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/dp_70"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/fanhui" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="智能取暖器"
                    android:textColor="@color/color_gray2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/color_gray3" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_qnq_sdwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li_qnq_title"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:text="设定温度"
                android:textColor="@color/color_gray2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_qnq_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_qnq_sdwd"
                android:layout_below="@+id/tv_qnq_sdwd"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="32"
                android:textColor="@color/color_yellow_yuan"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_qnq_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_qnq_32"
                android:layout_toRightOf="@id/tv_qnq_32"
                android:text="℃"
                android:textColor="@color/color_yellow_yuan"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_qnq_sdwd"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/tv_qnq_sdwd"
                android:text="当前温度"
                android:textColor="@color/color_gray2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_qnq_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_qnq_1"
                android:layout_marginLeft="@dimen/dp_38"
                android:layout_toRightOf="@id/tv_qnq_1"
                android:text="18"
                android:textColor="@color/color_yellow_yuan"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_qnq_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_qnq_18"
                android:layout_toRightOf="@id/tv_qnq_18"
                android:text="℃"
                android:textColor="@color/color_yellow_yuan"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/iv_qnq_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_qnq_1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/qnq_kgk" />

            <TextView
                android:id="@+id/tv_qnq_null"
                android:layout_width="match_parent"
                android:layout_height="240dp" />

            <ImageView
                android:id="@+id/iv_qnq_yw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_qnq_qnq"
                android:layout_alignTop="@+id/iv_qnq_qnq"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/qnq_yw" />

            <ImageView
                android:id="@+id/iv_qnq_yw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/iv_qnq_qnq"
                android:layout_alignTop="@+id/iv_qnq_qnq"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@mipmap/qnq_yw" />

            <ImageView
                android:id="@+id/iv_qnq_yw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_qnq_qnq"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/qnq_yw"

                />


            <ImageView
                android:id="@+id/iv_qnq_yw7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_qnq_qnq"
                android:layout_alignLeft="@+id/iv_qnq_qnq"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/qnq_yw" />

            <ImageView
                android:id="@+id/iv_qnq_yw8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_qnq_qnq"
                android:layout_alignRight="@id/iv_qnq_qnq"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@mipmap/qnq_yw"

                />

            <ImageView
                android:id="@+id/iv_qnq_yw9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_qnq_qnq"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/qnq_yw"

                />

            <TextView
                android:id="@+id/tv_qnq_null1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/iv_qnq_qnq" />

            <ImageView
                android:id="@+id/iv_qnq_qnq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_qnq_null"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/qnq_qnq" />

            <ImageView
                android:id="@+id/iv_qnq_fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_qnq_qnq"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_25"
                android:src="@mipmap/qnq_fs" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_qnq_1"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qnq_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qnq_dsk"

                    />

                <TextView
                    android:id="@+id/tv_qnq_ds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="定时"
                    android:textColor="@color/color_gray2"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_qnq_gl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qnq_gl"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="功率"
                    android:textColor="@color/color_gray2"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_qnq_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qnq_sd"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="解锁"
                    android:textColor="@color/color_gray2"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_qnq_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qnq_pb"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="屏保"
                    android:textColor="@color/color_gray2"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <include layout="@layout/activity_bottom_sheetdsh" />
</android.support.design.widget.CoordinatorLayout>