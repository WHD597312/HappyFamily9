<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_green4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@color/color_green4"
        >
        <ImageView
            android:id="@+id/iv_zncz_fanh"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/zncz_fh"
            android:scaleType="centerInside"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_65"
        />

        <TextView
            android:paddingTop="@dimen/dp_6"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:text="智能插座"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            />
        <ImageView
            android:paddingTop="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_65"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/zncz_tb"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shapebig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:text="请连接设备"
            android:textColor="@color/color_green4"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_zncz_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_51"
            android:text="请添加设备"
            android:textColor="@color/color_gray3"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/zncz_adde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/znzc_add"
            android:scaleType="centerInside"
            android:layout_alignTop="@+id/iv_zncz_dy"
            android:background="@drawable/yuab_shape"
            android:layout_marginTop="-19dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/znzd_czy"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zncz_cz"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_zncz_dy"
            android:layout_width="263dp"
            android:layout_height="263dp"
            android:layout_centerInParent="true"
            android:src="@drawable/kxyuan_shape" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zncz_znsb"
            android:scaleType="centerInside"
            android:layout_alignBottom="@+id/iv_zncz_dy"
            android:background="@drawable/yuab_shape"
            android:layout_marginBottom="-19dp"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/li_zncz"
            android:layout_marginBottom="@dimen/dp_2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@mipmap/zncz_kg"

                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@mipmap/zncz_xz"

                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@mipmap/zncz_ds"

                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"

                android:src="@mipmap/zncz_xz"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_zncz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开关"
                android:textColor="@color/color_green4"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设定温度"
                android:textColor="@color/color_gray2"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="定时"
                android:textColor="@color/color_green4"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="限制"
                android:textColor="@color/color_gray2"
                android:textSize="16sp" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
