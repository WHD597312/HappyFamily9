<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.xr.happyFamily.jia.xnty.SmartSocket">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_green4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@color/color_green4"
        >
        <ImageView
            android:id="@+id/iv_zncz_fanh"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/zncz_fh"
            android:scaleType="centerInside"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_60"
        />

        <TextView
            android:paddingTop="@dimen/dp_6"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:text="智能插座"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            />
        <ImageView
            android:paddingTop="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_60"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/zncz_tb"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shapebig">

        <TextView
            android:id="@+id/tv_zncz_ljsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:textColor="@color/color_green4"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_zncz_qhsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="@color/color_gray3"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_zncz_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_65"
            android:text="请添加设备"
            android:textColor="@color/color_gray3"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/zncz_adde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/znzc_add"
            android:scaleType="centerInside"
            android:layout_alignTop="@+id/iv_zncz_dy"
            android:background="@drawable/yuab_shape"
            android:layout_marginTop="-21dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/znzd_czy"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/iv_zncz_cz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zncz_cz"
            android:layout_centerInParent="true"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
        <TextView
            android:id="@+id/tv_zncz_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:textSize="45sp"
            />
            <TextView
                android:id="@+id/tv_zncz_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
         </LinearLayout>
        <ImageView
            android:id="@+id/iv_zncz_dy"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/kxyuan_shape" />
        <ImageView
            android:id="@+id/zncz_znzd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zncz_znsb"
            android:scaleType="centerInside"
            android:layout_alignBottom="@+id/iv_zncz_dy"
            android:background="@drawable/yuab_shape"
            android:layout_marginBottom="-21dp"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/li_zncz"
            android:layout_marginBottom="@dimen/dp_2">

            <ImageView
                android:id="@+id/iv_zncz_kg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@mipmap/zncz_kg"

                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/color_green4"
                    android:id="@+id/tv_zncz_wd"
                    />
            <ImageView
                android:id="@+id/iv_zncz_addwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/zncz_hq"
                android:layout_centerHorizontal="true"

                />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_zncz_ds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@mipmap/zncz_ds"

                />

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color_green4"
                    android:id="@+id/tv_zncz_xz"
                    />
                <ImageView
                    android:id="@+id/iv_zncz_addxz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/zncz_hq"
                    android:layout_centerHorizontal="true"

                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_zncz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"

            >

            <TextView
                android:id="@+id/tv_zncz_kg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开关"
                android:textColor="@color/color_green4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_zncz_sdwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设定温度"
                android:textColor="@color/color_gray2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_zncz_ds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="定时"
                android:textColor="@color/color_green4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_zncz_sdxz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="限制"
                android:textColor="@color/color_gray2"
                android:textSize="16sp" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
</RelativeLayout>
<include layout="@layout/activity_bottom_sheet2" />
</android.support.design.widget.CoordinatorLayout>