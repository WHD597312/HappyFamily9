<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_green4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:background="@color/color_green4"
        >
        <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/zncz_fh"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_85"
        />
        <TextView
            android:paddingTop="@dimen/dp_6"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:text="智能插座"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            />
        <ImageView
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_85"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/zncz_tb"
            />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shapebig"
            >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="请连接设备"
          android:textColor="@color/color_green4"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_marginLeft="@dimen/dp_20"
          android:textSize="24sp"
          />
      <TextView
          android:id="@+id/tv_zncz_add"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="请添加设备"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/dp_71"
          android:textColor="@color/color_gray3"
          android:textSize="15sp"
          />

            <LinearLayout
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_above="@+id/li_zncz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/zncz_kg"
                android:layout_marginTop="@dimen/dp_10"

                />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/zncz_xz"
                    android:layout_marginTop="@dimen/dp_10"

                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:src="@mipmap/zncz_ds"

                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/zncz_xz"

                    android:layout_marginTop="@dimen/dp_10"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_zncz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_50"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/color_green4"
                    android:text="开关"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/color_green4"
                    android:text="设定温度"
                    />
                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/color_green4"
                android:text="定时"
                /> <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_green4"
                android:text="限制"
                />




            </LinearLayout>
        </RelativeLayout>


</LinearLayout>
