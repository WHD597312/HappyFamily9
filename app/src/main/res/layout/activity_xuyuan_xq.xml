<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#4EE4AA"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:tint="@color/white"
            android:src="@mipmap/fanhui"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细信息"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_xuyuanxq"
        android:paddingLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_20">
        <ImageView
            android:id="@+id/img_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_fabu_touxiang"
            android:layout_marginTop="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_touxiang"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:text="莫悔" />

        <com.xr.happyFamily.bao.view.FlowTagView
            android:id="@+id/ft_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_touxiang"
            android:layout_below="@id/tv_name"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            app:lineSpacing="@dimen/dp_10"
            app:tagSpacing="@dimen/dp_15" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_yuanwang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rl_info"
        android:background="@mipmap/bg_xuyuanxq"
        android:paddingTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的愿望"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_2"
            />

        <TextView
            android:id="@+id/tv_myInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#B0B0B0"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_4"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/bg_xuyuanxq"
        android:layout_below="@+id/ll_yuanwang"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_2"
            />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:drawableLeft="@mipmap/ic_xuyuanxq_id"
            android:textColor="#B0B0B0"
            android:layout_marginTop="@dimen/dp_22"

            android:text="学生"
            android:drawablePadding="@dimen/dp_15"/>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:drawableLeft="@mipmap/ic_xuyuanxq_adress"
            android:textColor="#B0B0B0"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="浙江"
            android:drawablePadding="@dimen/dp_17"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_info"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@mipmap/bg_xuyuanxq"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的爱好"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_5"
            />
        <com.xr.happyFamily.bao.view.FlowTagView
            android:id="@+id/ft_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_touxiang"
            android:layout_below="@id/tv_name"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_4"
            app:lineSpacing="@dimen/dp_10"
            app:tagSpacing="@dimen/dp_15" />


    </LinearLayout>


    <ImageView
        android:id="@+id/img_goto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:visibility="gone"
        android:src="@mipmap/bg_xuyuanxq_btn"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>