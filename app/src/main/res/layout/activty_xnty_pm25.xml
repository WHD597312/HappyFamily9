<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.xr.happyFamily.jia.titleview.TitleView
        android:id="@+id/title_pm25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bt_pm25_wd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="温度"
            android:textSize="13pt"
            android:textColor="@color/color_gray2"
            />
        <Button
            android:id="@+id/bt_pm25_sd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13pt"
            android:background="@null"
            android:textColor="@color/color_gray2"
            android:text="湿度"/>
        <Button
            android:textSize="13pt"
            android:id="@+id/bt_pm25_pm25"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/color_blue_pm25"
            android:text="PM2.5"
            />

    </LinearLayout>

    </RelativeLayout>
</LinearLayout>
