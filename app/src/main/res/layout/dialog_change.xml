<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_jy_320" android:layout_height="@dimen/dp_jy_200"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog"
    >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑内容"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_jy_24"
        android:textSize="@dimen/sp_22"
        android:textColor="#4b4b4b"
        />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dp_jy_255"
        android:layout_height="@dimen/dp_jy_39"
        android:hint="编辑内容"
        android:textColor="#939393"
        android:gravity="center"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/dp_jy_27"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:singleLine="true"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_1"
        android:background="#d8dbd5"
        android:layout_above="@+id/linear"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_45"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textColor="#797979"
            />
        <TextView
            android:id="@+id/btn_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:textColor="#09c585"
            />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_jy_1"
        android:layout_height="wrap_content"
        android:background="#d8dbd5"
        android:layout_alignBottom="@+id/linear"
        android:layout_alignTop="@+id/linear"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>