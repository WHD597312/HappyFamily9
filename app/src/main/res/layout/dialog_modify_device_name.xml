<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    >

    <LinearLayout
        android:layout_width="@dimen/dp_jy_300"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_custom_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:gravity="center"
            android:text="修改设备名称"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_40"
            android:gravity="center_vertical"
            android:hint="修改设备名称"
            android:layout_toRightOf="@+id/tv_create"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_back"
            android:layout_marginLeft="@dimen/dp_jy_10"
            android:layout_marginRight="@dimen/dp_jy_10"
            android:paddingLeft="@dimen/dp_jy_2"
            android:textSize="16sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_jy_20"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_marginRight="@dimen/dp_jy_20"
            android:layout_marginBottom="@dimen/dp_jy_20"
            >

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="@dimen/dp_jy_135"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取 消"
                android:textColor="@color/white"
                android:background="@drawable/home_back"
                android:layout_alignParentRight="true"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button_ensure"
                android:layout_width="@dimen/dp_jy_135"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确 定"
                android:textColor="@color/white"
                android:background="@drawable/home_back2"
                android:layout_alignParentLeft="true"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>