<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_le_commonitem"
    android:background="@color/white"
    android:layout_height="@dimen/dp_jy_68">
    <TextView
        android:id="@+id/tv_clock_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:00"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_clock_week1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_clock_time"
        android:text="周一"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginTop="@dimen/dp_jy_5"
        />

    <ImageView
        android:id="@+id/iv_clock_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bt_kg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_jy_12"
        />

</RelativeLayout>
