<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf9f9"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/my_back"
        >
        <ImageView
            android:layout_marginTop="@dimen/dp_jy_10"
            android:id="@+id/image_header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/myjiangshan"
            />
        <ImageView
            android:id="@+id/image_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/my"
            android:layout_below="@+id/image_header2"
            />
        <ImageView
            android:id="@+id/image_user_back"
            android:layout_width="@dimen/dp_jy_65"
            android:layout_height="@dimen/dp_jy_65"
            android:layout_centerVertical="true"
            android:src="@mipmap/image_user_back"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_jy_10" />
        <ImageView
            android:id="@+id/image_user"
            android:layout_width="@dimen/dp_jy_50"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_centerVertical="true"
            android:src="@mipmap/image_user"
            android:layout_marginLeft="@dimen/dp_jy_17"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_user_back"
            android:layout_marginLeft="@dimen/dp_jy_10"
            >
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="千禧之年"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1352250152"
                android:textColor="@color/white"
                android:layout_below="@+id/tv_user_name"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_editor"
            android:layout_width="@dimen/dp_jy_30"
            android:layout_height="@dimen/dp_jy_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_jy_30"
            android:src="@mipmap/image_editor"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <ListView
        android:layout_marginLeft="@dimen/dp_jy_15"
        android:layout_marginRight="@dimen/dp_jy_15"
        android:id="@+id/list_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_jy_130"
        android:divider="@null"
        android:background="@color/white"
        />
</RelativeLayout>