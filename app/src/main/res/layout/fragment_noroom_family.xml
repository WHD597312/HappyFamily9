<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_noroom_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/mypage" />

        <TextView
            android:id="@+id/tv_wd_my1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_jy_28"
            android:layout_marginTop="@dimen/dp_jy_185"
            android:text="环境"
            android:textColor="@color/color_white"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_marginTop="@dimen/dp_jy_12">

            <TextView
                android:id="@+id/tv_noroom_hoursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="xxxxx的家"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/dp_jy_18"
                android:layout_height="@dimen/dp_jy_18"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_jy_5"
                android:layout_toRightOf="@+id/tv_noroom_hoursename"
                android:src="@mipmap/jt_xz" />

            <ImageButton
                android:id="@+id/ib_croom"
                android:layout_width="@dimen/dp_jy_20"
                android:layout_height="@dimen/dp_jy_20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_jy_14"
                android:layout_marginTop="@dimen/dp_jy_13"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/weishengjian1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_23_my1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_wd_my1"
            android:layout_alignLeft="@+id/tv_wd_my1"
            android:layout_marginLeft="@dimen/dp_jy_37"
            android:text="23℃"
            android:textColor="@color/color_white"
            android:textSize="35sp"

            />

        <RelativeLayout
            android:id="@+id/rl_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_wd_my1">

            <ImageView
                android:id="@+id/iv_my1"

                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:src="@mipmap/bj_mypage" />

            <TextView
                android:id="@+id/tv_xnty_my1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_jy_53"
                android:layout_marginTop="@dimen/dp_jy_17"
                android:text="虚拟体验"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_xntye_my1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_xnty_my1"
                android:layout_below="@+id/tv_xnty_my1"
                android:text="VIRTUAL REALITY"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/iv_mypage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_jy_166"
                android:layout_alignLeft="@id/tv_xnty_my1"
                android:layout_alignTop="@+id/tv_xnty_my1"
                android:layout_marginLeft="@dimen/dp_jy_110"
                android:src="@mipmap/mypage_xnty" />

            <TextView

                android:layout_width="@dimen/dp_jy_105"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@id/tv_xnty_my1"
                android:layout_below="@+id/tv_xntye_my1"
                android:layout_marginTop="@dimen/dp_jy_23"
                android:text="八大系列，超凡体验一秒玩转您的宝贝"
                android:textSize="11sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_add_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_page"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_marginRight="@dimen/dp_jy_12"
            android:layout_marginTop="@dimen/dp_jy_20"
            android:background="@mipmap/button"
            android:text="+ 添加房间"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>
