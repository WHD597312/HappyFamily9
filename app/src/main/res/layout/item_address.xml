<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴广"
            android:textColor="@color/shop_context"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_35"
            android:text="15335379527"
            android:textColor="@color/shop_title"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_conf_name"
        android:layout_below="@+id/tv_conf_name"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:text="浙江  宁波  慈溪  详细地址......"
        android:textColor="@color/shop_context"
        android:textSize="@dimen/sp_12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6" />

    <include layout="@layout/cutline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">
        <ImageView
            android:id="@+id/img_choose"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/weixuanzhong3x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:textColor="@color/shop_context"
            android:textSize="@dimen/sp_12"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5" />
        <ImageView
            android:id="@+id/img_bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_bianji"/>
        <ImageView
            android:id="@+id/img_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_del"
            android:layout_marginLeft="@dimen/dp_20"/>
    </LinearLayout>
    <com.xr.happyFamily.bao.view.LinearGradientView
        android:layout_height="@dimen/dp_3"
        android:layout_width="match_parent"/>

</LinearLayout>


