<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴广"
            android:textColor="@color/shop_context"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="35dp"
            android:text="15335379527"
            android:textColor="@color/shop_title"
            android:textSize="12sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_conf_name"
        android:layout_below="@+id/tv_conf_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="浙江  宁波  慈溪  详细地址......"
        android:textColor="@color/shop_context"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <include layout="@layout/cutline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageView
            android:id="@+id/img_choose"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixuanzhong3x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:textColor="@color/shop_context"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />
        <ImageView
            android:id="@+id/img_bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_bianji"/>
        <ImageView
            android:id="@+id/img_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_del"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <com.xr.happyFamily.bao.view.LinearGradientView
        android:layout_height="3dp"
        android:layout_width="match_parent"/>

</LinearLayout>


