<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_jy_120"
    android:orientation="vertical"
    android:background="@drawable/bg_shape_fill_white5"
    android:layout_marginTop="@dimen/dp_jy_12"
    android:layout_marginLeft="@dimen/dp_jy_12"
    android:layout_marginRight="@dimen/dp_jy_12"
    android:padding="@dimen/dp_jy_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_jy_5"
        android:gravity="center">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="跨开了门"
            android:textColor="@color/color_msg"
            android:layout_marginLeft="@dimen/dp_jy_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想要与你“有轨”绑定"
            android:textSize="@dimen/sp_16"
            android:textColor="#666666"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_jy_15">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="拒绝"
            android:gravity="center"
            android:background="@drawable/bg_shape_stroke_gray2"
            android:padding="@dimen/dp_jy_8"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_jy_6"
            android:textColor="#666666"
            />

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="同意"
            android:padding="@dimen/dp_jy_8"
            android:layout_marginLeft="@dimen/dp_jy_50"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/bg_shape_friend2"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_jy_6"
            />
    </LinearLayout>


</LinearLayout>