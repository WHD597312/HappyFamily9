<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_shape_fill_white5"
    android:layout_marginTop="@dimen/dp_jy_12"
    android:layout_marginLeft="@dimen/dp_jy_12"
    android:layout_marginRight="@dimen/dp_jy_12"
    android:padding="@dimen/dp_jy_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_jy_8"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_touxiang"
            android:layout_width="@dimen/dp_jy_39"
            android:layout_height="@dimen/dp_jy_39"
            android:src="@mipmap/ic_touxiang_qunzu" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_jy_12"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/dp_jy_5"/>

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_clock_nv"
            android:layout_marginLeft="@dimen/dp_jy_20"/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#b4b4b4"
            android:layout_marginLeft="@dimen/dp_jy_8"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:textSize="@dimen/sp_12"
        android:textColor="#bebebe"
        android:text="附加信息"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_clock_qinglv5"
        android:id="@+id/tv_context"
        android:paddingTop="@dimen/dp_jy_8"
        android:paddingLeft="@dimen/dp_jy_18"
        android:text="我是刘艳强"
        android:textColor="#666666"
        android:textSize="@dimen/dp_jy_12"
        android:paddingBottom="@dimen/dp_jy_18"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_jy_15">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="拒绝"
            android:gravity="center"
            android:background="@drawable/bg_shape_stroke_gray2"
            android:padding="@dimen/dp_jy_8"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            />

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="同意"
            android:padding="@dimen/dp_jy_8"
            android:layout_marginLeft="@dimen/dp_jy_50"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/bg_shape_friend2"
            android:textColor="@color/white"
            />
    </LinearLayout>


</LinearLayout>