<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_jy_12"
    android:orientation="vertical"
    android:background="@color/white"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_108"
        android:id="@+id/rl_item"
        android:background="@color/white"
        android:padding="@dimen/dp_jy_12">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_30"

        android:text="08:00"/>
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_time"
        android:layout_below="@id/tv_time"
        android:id="@+id/img1"
        android:src="@mipmap/ic_touxiang_qunzu"
        android:layout_marginTop="@dimen/dp_jy_5"
        />

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_time"
        android:id="@+id/img2"
        android:layout_alignTop="@id/img1"
        android:layout_toRightOf="@id/img1"
        android:src="@mipmap/ic_touxiang_qunzu"
        android:layout_marginLeft="@dimen/dp_jy_2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/tv_time"
        android:id="@+id/img3"
        android:layout_alignTop="@id/img2"
        android:layout_toRightOf="@id/img2"
        android:src="@mipmap/ic_touxiang_qunzu"
        android:layout_marginLeft="@dimen/dp_jy_2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/tv_time"
        android:id="@+id/img4"
        android:layout_alignTop="@id/img3"
        android:layout_toRightOf="@id/img3"
        android:src="@mipmap/ic_touxiang_qunzu"
        android:layout_marginLeft="@dimen/dp_jy_2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/tv_time"
        android:id="@+id/img5"
        android:layout_alignTop="@id/img4"
        android:layout_toRightOf="@id/img4"
        android:src="@mipmap/ic_touxiang_qunzu"
        android:layout_marginLeft="@dimen/dp_jy_2"
        />
      <TextView
          android:id="@+id/tv_context"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="起床啦，起床啦"
          android:textColor="#A7A7A7"
          android:layout_toRightOf="@+id/tv_time"
          android:layout_alignTop="@+id/tv_time"
          android:layout_alignBottom="@+id/tv_time"
          android:gravity="center"
          android:layout_marginLeft="@dimen/dp_jy_12"
          android:textSize="@dimen/sp_12"/>


   <ImageView
       android:id="@+id/img_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:checked="false"
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true" android:button="@null"
       android:background="@mipmap/btn_clock_qunzu"
       />



</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_2"
        android:background="#eaeaea"/>
</LinearLayout>