<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_jy_40"
    android:orientation="horizontal"
    android:gravity="center">

   <RelativeLayout
       android:layout_width="@dimen/dp_jy_28"
       android:layout_height="@dimen/dp_jy_28"
       android:gravity="center">
      <ProgressBar
          android:id="@+id/proLoding"
          android:visibility="gone"
          android:layout_width="@dimen/dp_jy_20"
          android:layout_height="@dimen/dp_jy_20"
          android:indeterminateDrawable="@drawable/proloading"
          android:layout_centerInParent="true"/>
      <ImageView
          android:id="@+id/imgLoding"
          android:layout_width="@dimen/dp_jy_20"
          android:layout_height="@dimen/dp_jy_28"
          android:src="@mipmap/ic_arrow_down"/>
   </RelativeLayout>

   <TextView
       android:id="@+id/tv1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="正在加载更多的数据..."
       android:textSize="@dimen/sp_12"
       android:textColor="@color/shop_context"
       android:layout_marginLeft="@dimen/dp_jy_10"/>
</LinearLayout>
