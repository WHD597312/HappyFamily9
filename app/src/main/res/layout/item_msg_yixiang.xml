<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/dp_jy_5"
    android:paddingRight="@dimen/dp_jy_5"
    android:paddingTop="@dimen/dp_jy_3"
    android:paddingBottom="@dimen/dp_jy_7"
    android:background="@mipmap/bg_xuyuanxq">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="@dimen/dp_jy_5">
        

        <ImageView
            android:id="@+id/iv_gridView_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_air_error"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_30"
            android:background="@drawable/bg_shape_jianbian_hei"
            android:layout_alignBottom ="@+id/iv_gridView_item"
            android:layout_alignRight="@+id/iv_gridView_item" />
        <TextView
            android:id="@+id/tv_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500M"
            android:drawableLeft="@mipmap/ic_address_white"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"

            android:layout_marginLeft="@dimen/dp_jy_5"
            android:layout_alignBottom ="@+id/iv_gridView_item"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小白兔"
            android:layout_above="@+id/tv_juli"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_jy_5"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_gridView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_jy_5"
        android:text="对方有意和你匹配"
        android:layout_marginBottom="@dimen/dp_jy_15"/>

</LinearLayout>