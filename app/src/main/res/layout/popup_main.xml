<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_shape_search">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_jy_170"
        android:orientation="vertical"
        >



        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7F7F7F"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_jy_44"
            android:textSize="@dimen/sp_12"
            android:text="确定清空历史记录吗？"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_62"
            android:orientation="horizontal"
            android:background="@drawable/bg_shape_search_button"
            android:layout_alignParentBottom="true"
            android:gravity="center"
          >

            <TextView
                android:id="@+id/tv_quxiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#7F7F7F"
                android:gravity="center"
                android:textSize="@dimen/sp_12"

           android:text="取消"/>

            <View
                android:layout_width="@dimen/dp_jy_1"
                android:layout_marginTop="@dimen/dp_jy_20"
                android:layout_marginBottom="@dimen/dp_jy_20"
                android:layout_height="match_parent"
                android:background="#26000000"/>

            <TextView
                android:id="@+id/tv_queren"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#7F7F7F"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:text="确认"/>

        </LinearLayout>





        </RelativeLayout>


</LinearLayout>


