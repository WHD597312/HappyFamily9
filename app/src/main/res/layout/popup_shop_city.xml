<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <View
        android:id="@+id/view_dis"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_shape_address">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择国家地区"
                android:textColor="#6E6E6E"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_address_close" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_xuanze"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:padding="@dimen/dp_12">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选择"
                android:textColor="#996E6E6E"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_30">


                <RelativeLayout
                    android:id="@+id/rl_sheng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_sheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="XX省"
                        android:textColor="#6e6e6e"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/img_tuijian"
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_3"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_shape_search_result" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_shi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_37">

                    <TextView
                        android:id="@+id/tv_shi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="XX市"
                        android:textColor="#6e6e6e"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/img_shi"
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_3"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_shape_search_result"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_qu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_37">

                    <TextView
                        android:id="@+id/tv_qu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="XX区"
                        android:textColor="#6e6e6e"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/img_qu"
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_3"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_shape_search_result"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#996e6e6e"
            android:text="选择省份/地区"
            android:textSize="@dimen/sp_12"
            android:padding="@dimen/dp_12"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



</LinearLayout>


