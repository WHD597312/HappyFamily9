<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_295"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_fill_faf7f710">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_jy_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模式"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#979797"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_jy_20"
                    android:layout_marginBottom="@dimen/dp_jy_20">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_jy_40"
                        android:background="@color/white"
                        android:layout_centerInParent="true"/>
                    <com.weigan.loopview.LoopView
                        android:id="@+id/loop_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_jy_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#979797"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_jy_20"
                    android:layout_marginBottom="@dimen/dp_jy_20">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_jy_40"
                        android:background="@color/white"
                        android:layout_centerInParent="true"/>
                    <com.weigan.loopview.LoopView
                        android:id="@+id/loop_hour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_jy_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#979797"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_jy_20"
                    android:layout_marginBottom="@dimen/dp_jy_20">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_jy_40"
                        android:background="@color/white"
                        android:layout_centerInParent="true"/>
                    <com.weigan.loopview.LoopView
                        android:id="@+id/loop_min"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_jy_32"
            android:paddingRight="@dimen/dp_jy_32"
            android:paddingBottom="@dimen/dp_jy_12"
            android:paddingTop="@dimen/dp_jy_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_quxiao"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_jy_35"
                android:layout_weight="1"
                android:background="@drawable/bg_fill_eaeaea25"
                android:text="取消"
                android:textSize="@dimen/sp_14"
                android:textColor="#5c5c5c"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_jy_12"/>

            <TextView
                android:id="@+id/tv_queding"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_jy_35"
                android:layout_weight="1"
                android:background="@drawable/bg_fill_37d39e25"
                android:text="确定"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"
                android:gravity="center"/>

        </LinearLayout>





    </LinearLayout>



</RelativeLayout>


