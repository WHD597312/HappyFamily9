<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    xmlns:DoubleWaveView="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">

 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
  <com.xr.happyFamily.jia.view_custom.DoubleWaveView
      android:id="@+id/doubleWaveView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@id/img1"
      android:layout_alignBottom="@id/img1"/>
  <ImageView
      android:id="@+id/img1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/bg_wave"/>

 </RelativeLayout>


 <EditText
     android:id="@+id/ed_num"
     android:layout_width="@dimen/dp_jy_100"
     android:layout_height="wrap_content" />
 <Button
     android:id="@+id/btn_queding"
     android:layout_width="@dimen/dp_jy_100"
     android:layout_height="wrap_content"
     android:text="确定"/>
 </LinearLayout>